{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": false, 
    "declarationMap": false,
    "esModuleInterop": true,
    "outDir": "./build",
    "strict": true,
    "target": "ES2021",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react-jsx"
  },
  "include": ["app/**/*", "database/**/*", "routes/**/*", "server.ts", "bootstrap/**/*"],
  "exclude": ["node_modules", "resources/js", "build"]
}
